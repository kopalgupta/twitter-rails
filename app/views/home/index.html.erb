<br>
<%= form_tag '/create_tweet' do %>
	<%= text_area_tag :content %>
	<%= submit_tag "Tweet Now!" %>
<% end %>

<ul>
<% @tweets.each do |tweet| %>
	<li>
		<% count_likes = 0 %>
		<% @likes.each do |like| %>
			<% if like.tweet_id == tweet.id %>
				<% count_likes = count_likes + 1 %>
			<% end %>
		<% end %>

		<%= render 'tweet', :tweet => tweet, :count_likes => count_likes %>
		<!-- created _tweet.html.erb partial -->
	</li>
<% end %>
</ul>